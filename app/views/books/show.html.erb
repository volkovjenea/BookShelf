<body class="show_book"></body>
<div class="container">
  <div class="row">
    <div class="col-sm-12"></div>
    <div class="col-sm-3">
      <%= image_tag("http://t3.gstatic.com/images?q=tbn:ANd9GcQZeQAugEeobe5rlhfPm9PcR0K_1L86yWuL2seqOWquDsBXjFBv", alt: "book", title: "book", class: "img-fluid img-thumbnail") %>
    </div>
    <div class="col-sm">
      <p>
      <strong>Title:</strong>
      <%= @book.title %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @book.description %>
    </p>
    <p>
      <strong>Isbn:</strong>
      <%= @book.isbn %>
    </p>
    <p>
      <strong>Book authors:</strong>
      <%= @book.authors.map(&:name) %>
    </p>
    </div>
  </div>
  <div class="row">
    <div class="col" id="comments">
      <h3><%= @book.comments.count %> Comments </h3>
      <%= render @book.comments %>
      <h5>Add a comment:</h5>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
<% link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Back', books_path ,class: "btn btn-primary pull-right" %>
